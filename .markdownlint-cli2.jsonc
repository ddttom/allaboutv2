{
  // Configuration for markdownlint-cli2
  "config": {
    "default": true,
    // Disable line length check (MD013) - too restrictive for documentation
    "MD013": false,
    // Allow inline HTML (MD033) - needed for EDS blocks and complex formatting
    "MD033": false,
    // Allow bare URLs (MD034) - common in documentation
    "MD034": false,
    // Don't require h1 as first line (MD041) - metadata tables come first
    "MD041": false
  },
  // Globs to lint
  "globs": [
    "**/*.md"
  ],
  // Globs to ignore - respects .gitignore automatically
  "ignores": [
    "node_modules",
    ".git",
    ".hlx",
    ".claude",
    "plusplus",
    "build/*/dist",
    "scrap",
    "docs/remediation/files/results",
    "promptloc",
    ".agents/workflows"
  ],
  // Use .gitignore patterns
  "gitignore": true
}
